model Review {
  id              Int @id @default(autoincrement())
  productId       Int
  message         String @db.Text
  rating          Int @default(0)
  createdAt       DateTime @default(now())
  createdById     Int
  updatedAt       DateTime @updatedAt
  updatedById     Int?
  deleteAt        DateTime?
  deleteById      Int?

  product         Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  createdBy       Customer @relation("CustomerCreatedReview", fields: [createdById], references: [id])
  updatedBy       Customer? @relation("CustomerUpdatedReview", fields: [updatedById], references: [id])
  deletedBy       Customer? @relation("CustomerDeletedReview", fields: [deleteById], references: [id])

  @@map("reviews")
}